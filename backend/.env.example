# MongoDB
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/rhinos-training?retryWrites=true&w=majority"

# JWT - 90 day session for training app (players won't need to login frequently)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="90d"

# Brevo (Sendinblue) - Email Service
BREVO_API_KEY="your-brevo-api-key-here"
BREVO_SENDER_EMAIL="noreply@rhinostraining.com"
BREVO_SENDER_NAME="Rhinos Training"

# Cloudinary - Image Upload Service
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"
CLOUDINARY_FOLDER="rhinos-training"

# Server
PORT=5000
NODE_ENV="development"

# Frontend URL (for CORS and password reset links)
FRONTEND_URL="http://localhost:3001"
